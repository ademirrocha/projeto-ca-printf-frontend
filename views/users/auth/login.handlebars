<div class="container ">
  <div class="fadeIn first " id="form-modal">
    <div class="wrapper fadeInDown">
      <div class="center">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first">
          <img style="width: 100px;" src="img/default-user.png" id="icon" alt="User Icon" />
        </div>
        <!-- Login Form -->
        <form action="/auth/login" method="POST">
          {{#each errors }}

          {{#each this }}

          {{#if (equals @key 'errors')}} 
          <div class="alert alert-danger" role="alert"> 
            {{this}}
          </div>
          {{/if}} 

          {{/each}}

          {{/each}}

          <div class="container col-12">

            <div class="form-group col-12">
              <label class="form-text">
                Email: <i class="required"></i>
                {{#each errors }}
                <span class="message-text error-text" id="email_error">
                  {{#each this }} {{#if (equals @key 'email')}} {{this}} {{/if}} {{/each}}
                </span>
                {{/each}}
              </label> 

              <input type="email" id="email" class="fadeIn second form-control" name="email" placeholder="E-mail">
            </div>
            <div class="form-group col-12">
              <label class="form-text ">
                Senha: <i class="required"></i>
                {{#each errors }}
                <span class="message-text error-text" id="password_error">
                  {{#each this }} {{#if (equals @key 'password')}} {{this}} {{/if}} {{/each}}
                </span>
                {{/each}}
              </label> 
              <input type="password" id="password" class="fadeIn third form-control" name="password" placeholder="Senha">
            </div>
            <div class="form-group col-12">
              <button type="submit" class="fadeIn fourth btn btn-primary col-12">Entrar</button><br><br>
            </div>
          </div>
        </form>
        <!-- Remind Passowrd -->
        <div id="formFooter" class="row">
          <div class="col-md-6 mb-1">
            <a class="btn btn-primary" href="#">Esqueceu a senha?</a>
          </div>
          <div class="col-md-6 mb-1">
            <a class="btn btn-primary" href="/cadastro" >Criar Conta</a>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="container">
  <section style="background-image: url('/img/mini-profile-bg-02.jpg');">
    <div class="container-fluid mt-4">
      <div class="tm-portfolio-name  text-white tm-bg-green mx-auto">
        <h1 class="card-title h1">Projetos</h1>
      </div> 
      <p class="lead text-center">O Centro Academico Precisa armazenar seus projetos em lugares que possam divulgar e fortalecer o Campus-Arinos</p>
      <p class="lead text-center">Projetos realizados em parceria com o Centro Academico e FÃ¡brica de software</p>
      
    </div>
  </section>
  <br>

  {{#if error}}
  <div class="alert alert-danger center">
    {{error}}
  </div>
  {{/if}}
  {{#if success_msg}} <div class="alert alert-success center" role="alert">
    {{success_msg}}
  </div>{{/if}}

  <div class="row">
    {{#each projects.data}}


    <div class="col-sm-12 mb-4">
      <div class=" card center">
        <div class="card-body bg-light ">
          <div class="card-header">
            {{title}}
          </div>
          <div class="card-body text-success">
            <p class="card-text">{{trimString description 150}}...</p>
          </div>

          {{#if image.url}}
          <hr>
          <img src="{{image.url}}" class=" col-4 clip" alt="...">
          {{/if}}

          <hr>
          <div class="card-footer">
            <button class="btn btn-primary text-white"><a href="/events" >Mais Detalhes</a></button>
            {{#if (moderatorPermission)}}
            <button class="btn btn-success text-white"><a href="/admin/projetos/editar/{{id}}" >Editar</a></button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    {{else}}
    
    <div class="alert alert-danger center" role="alert"> 
      Desculpe. Nenhum projeto encontrado!
    </div>

    {{/each}}




    <nav aria-label="Page navigation example">
      <ul class="pagination">

        {{#each projects.meta.links}}

        {{#if (equals @index 0)}}

        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }} active{{/if}}"><a class="page-link" href="{{url}}">{{replace label '&laquo;' '<<'}}</a></li>
        {{else}}

        {{#if (isInteger label)}}
        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }}active{{/if}}"><a class="page-link" {{#if active }}{{/if}} href="{{url}}">{{label}}</a></li>
        {{else}}
        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }}active{{/if}}"><a class="page-link" {{#if active }}{{/if}} href="{{url}}">{{replace label '&raquo;' '>>'}}</a></li>
        {{/if}}
        {{/if}}

        {{/each}}
      </ul>
    </nav>

  </div>
</div>


<section  style="background-image:url('/img/mini-profile-bg-01.jpg');">
	<div class="jumbotron">
		<h1 class="h1 text-center text-white">Formulario De Atas De Reunião</h1>
		<hr class="my-4">
		<div class="container">
			<div class="row row-cols-4">
				<a class="btn btn-primary d-grid gap-2 col-2 mx-auto btn-lg " href="/" role="button">Voltar Menu Inicial</a>
				<a class="btn btn-primary d-grid gap-2 col-2 mx-auto btn-lg" style="width:200px;" href="/atas" role="button">Acessar atas de reunião</a>
			</div>	
		</div>
	</div>
</section>
<form action="/admin/formatasreuniao/create" method="post">
	<div class="shadow-none p-3 mb-5 bg-white rounded card mx-auto col-md-7 mt-4"id="headingOne">
		{{#if success_msg}} <div class="alert alert-success center" role="alert">
			{{success_msg}}
		</div>{{/if}}
		{{#if error_msg}}<div class="alert alert-danger center" role="alert">
			{{error_msg}}
		</div>{{/if}}
		<div class="col-12">
			<div class="mb-3">
				<label for="title">
					{{#each errors }}
					<span class="message-text error-text" id="title_error">
						{{#each this }} {{#if (equals @key 'title')}} {{this}} {{/if}} {{/each}}
					</span>
					{{/each}}
				Titulo Reunião</label>
				<input type="text" class="form-control" id="tituloreuniao" name="tituloreuniao" value="{{title}}">
			</div>
			<div class="mb-3">
				<label class="col-12" for="description">
					Descrição Reunião
					{{#each errors}}
					<span class="message-text error-text" id="description_error">
						{{#each this }} {{#if (equals @key 'description')}} {{this}} {{/if}} {{/each}}
					</span>
				{{/each}}</label>
				<textarea class="form-control" id="description" name="description" rows="3" value="{{description}}"></textarea>
			</div>
			<hr class="my-4">
			<div class="row">
				<div class="col-md-6 mb-1">
					<button class="btn btn-outline-primary col-12 btn-lg">Salvar</button>
				</div>
				<div class="col-md-6 mb-1">
					<button class="btn btn-outline-danger col-11 btn-lg">Cancelar</button>
				</div>
			</div>
		</div>
	</div>
</form>
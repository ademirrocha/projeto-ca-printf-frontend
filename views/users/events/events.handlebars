<div class="container">
  <section style="background-image: url('img/mini-profile-bg-02.jpg');">
    <div class="container-fluid mt-4">
      <div class="tm-portfolio-name  text-white tm-bg-green mx-auto">
        <h1 class="card-title h1">Eventos</h1>
      </div> 
      <hr>
      <p class="lead text-center h2">Eventos do CA-Printf</p>
      <!--<a class="btn btn-primary d-grid gap-2 col-2 mx-auto" href="/events" role="button">VoltarInicio</a>-->
    </div>
  </section>
  <br>

  <div class="row">
    {{#each events.data}}


    <div class="col-sm-6 mb-4">
      <div class="card">
        <div class="card-body bg-light ">
          <div class="card-header">
            {{title}}

            {{#if (equals state "Ativo")}}
            <div class="alert alert-success" role="alert"> 
              {{state}}
            </div>
            {{/if}}
            {{#if (equals state "Inativo")}}
            <div class="alert alert-warning" role="alert"> 
              {{state}}
            </div>
            {{/if}}
            {{#if (equals state "Cancelado")}}
            <div class="alert alert-dander" role="alert"> 
              {{state}}
            </div>
            {{/if}}

          </div>
          <div class="card-body text-success">
            <h4 class="card-title">{{format_date initial_date 'DD/MM/YYYY'}} a {{format_date final_date 'DD/MM/YYYY'}}</h4>
            <p class="card-text">{{trimString description 150}}...</p>
          </div>
          <div class="card-footer"><button class="btn btn-primary text-white"><a href="/events" >Mais Detalhes</a></button></div>
        </div>
      </div>
    </div>

    {{/each}}




    <nav aria-label="Page navigation example">
      <ul class="pagination">

        {{#each events.meta.links}}

        {{#if (equals @index 0)}}

        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }} active{{/if}}"><a class="page-link" href="{{url}}">{{replace label '&laquo;' '<<'}}</a></li>
        {{else}}

        {{#if (isInteger label)}}
        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }}active{{/if}}"><a class="page-link" {{#if active }}{{/if}} href="{{url}}">{{label}}</a></li>
        {{else}}
        <li class="page-item {{#if (equals url 'null')}} disabled{{/if}} {{#if active }}active{{/if}}"><a class="page-link" {{#if active }}{{/if}} href="{{url}}">{{replace label '&raquo;' '>>'}}</a></li>
        {{/if}}
        {{/if}}

        {{/each}}
      </ul>
    </nav>

  </div>
</div>

